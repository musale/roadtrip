@import "tailwindcss";

:root {
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  line-height: 1.5;
  font-weight: 400;
  
  /* Mobile-first font sizing */
  font-size: 16px;
  
  /* High contrast for outdoor visibility */
  --text-primary: #000000;
  --text-secondary: #374151;
  --background: #ffffff;
  --surface: #f9fafb;
  
  /* Custom colors for RoadTrip */
  --color-primary: 59 130 246; /* blue-500 */
  --color-recording: 239 68 68; /* red-500 */
  --color-success: 16 185 129; /* emerald-500 */
  
  /* Disable text selection on mobile */
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  
  /* Optimize text rendering */
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Mobile-first body styles */
body {
  margin: 0;
  padding: 0;
  min-height: 100vh;
  min-height: 100dvh; /* Dynamic viewport height for mobile */
  background-color: var(--background);
  color: var(--text-primary);
  
  /* Prevent zoom on mobile */
  touch-action: manipulation;
  
  /* Disable context menu on long press */
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

/* Remove focus outlines on mobile */
button, input, select, textarea {
  -webkit-tap-highlight-color: transparent;
}

/* High contrast button styles for outdoor visibility */
.btn-primary {
  @apply bg-blue-600 text-white font-semibold py-3 px-6 rounded-lg;
  @apply active:bg-blue-700 transition-colors duration-150;
  @apply min-h-[44px] min-w-[44px]; /* Touch target minimum */
}

.btn-recording {
  @apply bg-red-500 text-white font-semibold py-3 px-6 rounded-lg;
  @apply active:bg-red-600 transition-colors duration-150;
  @apply min-h-[44px] min-w-[44px];
  @apply animate-pulse;
}

.btn-secondary {
  @apply bg-gray-200 text-gray-800 font-semibold py-3 px-6 rounded-lg;
  @apply active:bg-gray-300 transition-colors duration-150;
  @apply min-h-[44px] min-w-[44px];
}

/* Canvas styles for HUD */
.hud-canvas {
  @apply absolute inset-0 pointer-events-none;
  image-rendering: pixelated; /* Sharp pixel rendering */
}

/* Map container styles */
.map-container {
  @apply w-full h-full relative;
}

/* Mode-specific layouts */
.mode-camera {
  @apply bg-black;
}

.mode-map {
  @apply bg-gray-100;
}

/* Accessibility improvements */
.sr-only {
  @apply absolute w-px h-px p-0 -m-px overflow-hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* High DPI canvas support */
canvas {
  image-rendering: -webkit-optimize-contrast;
  image-rendering: -moz-crisp-edges;
  image-rendering: pixelated;
}

/* Dark mode support for night driving */
@media (prefers-color-scheme: dark) {
  :root {
    --text-primary: #ffffff;
    --text-secondary: #d1d5db;
    --background: #111827;
    --surface: #1f2937;
  }
}

/* Landscape mode optimizations */
@media (orientation: landscape) {
  .landscape-optimize {
    @apply h-screen;
  }
}
